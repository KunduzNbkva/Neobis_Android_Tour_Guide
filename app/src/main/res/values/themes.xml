<resources >
    <!-- Base application theme. -->
    <style name="Theme.OshGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/robotoflex_regular</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="MyCustomCollapsingToolbarTheme" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/robotoflex_regular</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="CollapsedExpanded_Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Expanded_Desc_style">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/white</item>
    </style>




</resources>